QWidget {
    background-color: #0b0f14;
    color: #e6e6e6;
    font-size: 14px;
}

QTextEdit {
    background-color: #0f1620;
    border: 1px solid #1f2a38;
    padding: 8px;
}

QLineEdit {
    background-color: #0f1620;
    border: 1px solid #00e5ff;
    padding: 6px;
}

QPushButton {
    background-color: #00e5ff;
    color: #000;
    padding: 6px 12px;
    border-radius: 4px;
}

QPushButton:hover {
    background-color: #00c4dd;
}
